# GoREAL Production Environment Variables Template
# Copy this file to .env.production and fill in the actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment and versioning
ENVIRONMENT=production
APP_VERSION=latest
APP_SECRET_KEY=your-secret-key-here-use-strong-random-string

# Application settings
DEBUG=false
TESTING=false
LOG_LEVEL=info
PYTHONPATH=/app

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Production Database
DATABASE_URL=postgresql://goreal_user:your_db_password@postgres:5432/goreal_db
DB_HOST=postgres
DB_PORT=5432
DB_NAME=goreal_db
DB_USER=goreal_user
DB_PASSWORD=your_db_password

# Database pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=0
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis for caching and sessions
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password

# =============================================================================
# WEB SERVER CONFIGURATION
# =============================================================================

# Gunicorn settings
WORKERS=4
WORKER_CLASS=gevent
WORKER_CONNECTIONS=1000
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
TIMEOUT=30
KEEPALIVE=2
PRELOAD=true

# Nginx settings
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024
NGINX_CLIENT_MAX_BODY_SIZE=10M

# =============================================================================
# STREAMLIT DASHBOARD CONFIGURATION
# =============================================================================

STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Google Sheets API
GOOGLE_SHEETS_CREDENTIALS_FILE=/app/secrets/google-credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here

# Roblox API (if applicable)
ROBLOX_API_KEY=your_roblox_api_key_here

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Health check settings
HEALTH_CHECK_HOST=localhost
HEALTH_CHECK_PORT=8000
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_TIMEOUT=10

# Logging configuration
LOG_FILE=/app/logs/goreal.log
ACCESS_LOG_FILE=/app/logs/access.log
ERROR_LOG_FILE=/app/logs/error.log

# Monitoring endpoints
METRICS_ENABLED=true
METRICS_PORT=9090

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS settings
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# SSL/TLS
SSL_CERTIFICATE_PATH=/app/ssl/cert.pem
SSL_PRIVATE_KEY_PATH=/app/ssl/key.pem

# Session security
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# =============================================================================
# BACKUP AND STORAGE
# =============================================================================

# Backup settings
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# File storage
STATIC_FILES_PATH=/app/static
UPLOAD_PATH=/app/uploads
MAX_UPLOAD_SIZE=10485760

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Container settings
INSTANCE_ID=api-1
CONTAINER_TIMEZONE=UTC

# Build arguments
BUILD_DATE=2024-01-01T00:00:00Z
VCS_REF=latest