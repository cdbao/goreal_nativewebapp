# GoREAL Project - Environment Variables Template
# Copy this file to .env and update the values for your environment

# Database Configuration
DATABASE_URL=postgresql://goreal_user:goreal_password@postgres:5432/goreal_db
POSTGRES_DB=goreal_db
POSTGRES_USER=goreal_user
POSTGRES_PASSWORD=goreal_password

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-here-change-in-production

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000

# Google Sheets Configuration
GOOGLE_CREDENTIALS_FILE=goreal-470006-ac9c0ea86e0c.json
GOOGLE_SHEET_NAME=GoReal_Database
PLAYERLOG_SHEET_NAME=PlayerLog
CHALLENGES_SHEET_NAME=Challenges

# Jupyter Configuration
JUPYTER_TOKEN=your-jupyter-token-here
JUPYTER_PASSWORD=your-jupyter-password-here

# PgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@goreal.local
PGADMIN_DEFAULT_PASSWORD=admin

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/goreal.log

# Feature Flags
ENABLE_GOOGLE_SHEETS=true
ENABLE_DATABASE=true
ENABLE_REDIS_CACHE=true
ENABLE_API_RATE_LIMITING=false

# Security Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501
CORS_ENABLED=true

# Production Settings (only needed for production deployment)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem
# SENTRY_DSN=your-sentry-dsn-here